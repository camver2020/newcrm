<Window x:Class="CampingCarCrm_Frontend.ReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="예약 접수" Height="550" Width="400"
        WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="신규 회원 정보" Grid.Row="0" FontWeight="Bold">
            <StackPanel Margin="5">
                <TextBlock Text="이름:"/>
                <TextBox x:Name="NameTextBox" Margin="0,2,0,10"/>
                <TextBlock Text="연락처:"/>
                <TextBox x:Name="ContactTextBox" Margin="0,2,0,10"/>

                <TextBlock Text="소속 회사:"/>
                <ComboBox x:Name="CompanyComboBox" Margin="0,2,0,10" DisplayMemberPath="CompanyName"/>
                <TextBlock Text="소속 지점:"/>
                <ComboBox x:Name="BranchComboBox" Margin="0,2,0,0" DisplayMemberPath="BranchName"/>

            </StackPanel>
        </GroupBox>

        <GroupBox Header="예약 정보" Grid.Row="1" Margin="0,10,0,0" FontWeight="Bold">
            <StackPanel Margin="5">
                <TextBlock Text="차량 선택:"/>
                <ComboBox x:Name="CampingCarComboBox" Margin="0,2,0,10" DisplayMemberPath="CarNickname"/>

                <TextBlock Text="예약 상태:"/>
                <ComboBox x:Name="StatusComboBox" Margin="0,2,0,10" DisplayMemberPath="StatusName"/>
                <TextBlock Text="담당자:"/>
                <ComboBox x:Name="ManagerComboBox" Margin="0,2,0,0" DisplayMemberPath="ManagerName"/>

            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="저장" Width="80" Margin="10,10,0,0" IsDefault="True" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="취소" Width="80" Margin="10,10,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>